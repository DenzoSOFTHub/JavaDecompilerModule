<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.2//EN" "http://www.netbeans.org/dtds/filesystem-1_2.dtd">
<filesystem>
    <!-- Register the DataLoader for .class files with high priority (low position) -->
    <folder name="Loaders">
        <folder name="application">
            <folder name="x-class-file">
                <folder name="Factories">
                    <file name="ClassFileDataLoader.instance">
                        <attr name="SystemFileSystem.localizingBundle" stringvalue="it.denzosoft.javadecompilermodule.Bundle"/>
                        <attr name="dataObjectClass" stringvalue="it.denzosoft.javadecompilermodule.ClassFileDataObject"/>
                        <attr name="instanceCreate" methodvalue="org.openide.loaders.DataLoaderPool.factory"/>
                        <attr name="mimeType" stringvalue="application/x-class-file"/>
                        <attr name="position" intvalue="10"/>
                    </file>
                </folder>
                <folder name="Actions">
                    <file name="org-openide-actions-OpenAction.instance">
                        <attr name="position" intvalue="100"/>
                    </file>
                </folder>
            </folder>
        </folder>
        <!-- Also register for class extension with high priority -->
        <folder name="class">
            <folder name="Factories">
                <file name="ClassFileDataLoader.instance">
                    <attr name="SystemFileSystem.localizingBundle" stringvalue="it.denzosoft.javadecompilermodule.Bundle"/>
                    <attr name="dataObjectClass" stringvalue="it.denzosoft.javadecompilermodule.ClassFileDataObject"/>
                    <attr name="instanceCreate" methodvalue="org.openide.loaders.DataLoaderPool.factory"/>
                    <attr name="mimeType" stringvalue="application/x-class-file"/>
                    <attr name="position" intvalue="10"/>
                </file>
            </folder>
        </folder>
    </folder>

    <!-- MIME resolver for .class files with high priority -->
    <folder name="Services">
        <folder name="MIMEResolver">
            <file name="ClassFileResolver.xml" url="ClassFileResolver.xml">
                <attr name="displayName" bundlevalue="it.denzosoft.javadecompilermodule.Bundle#ClassFileResolver_displayName"/>
                <attr name="position" intvalue="10"/>
            </file>
        </folder>
    </folder>
</filesystem>
